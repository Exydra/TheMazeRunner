<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        tools:context="com.example.jan_c.themazerunner.help">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="327dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/textView4"
                    android:layout_below="@id/textView11"
                    android:text='Ik krijg de hele tijd de melding "Er is geen locatie beschikbaar".'
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="327dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView10"
                    android:layout_below="@+id/textView2"
                    android:layout_marginBottom="10dp"
                    android:text="Simpel. Je volgt de route op de kaart en loopt deze zo snel mogelijk af. De bedoeling is om een betere score af te leggen dan de andere spelers. Je totale tijd is de tijd van vertrek vanaf de eerste marker tot en met de laatste." />
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="327dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/textView4"
                    android:layout_below="@id/textView5"
                    android:layout_marginBottom="10dp"
                    android:text="The Maze Runner is een spel waarbij het de bedoeling is om zo snel mogelijk een gekozen route af te lopen. Zo zijn er in elke gemeenten wel enkele routes. Deze scores worden bijgehouden op een gemeenschappelijk scorebord." />
                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="327dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView8"
                    android:layout_below="@+id/textView10"
                    android:layout_marginBottom="10dp"
                    android:text="Ja. Wij hebben gedurende het spel verbinding nodig met het internet om de scores te kunnen opslaan. Zonder internet kan je dus niet spelen." />
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="327dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/textView4"
                    android:layout_below="@id/textView8"
                    android:text="Dat betekend dat wij geen toegang hebben tot jouw huidige locatie. Dit kan je in de instellingen van je smartphone wijzigen. De melding gaat weg van zodra er een locatie is gevonden, anders kan je niet spelen." />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:text="FAQ"
                    android:textSize="24sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/textView4"
                    android:layout_below="@id/textView6"
                    android:text="Heb je internet nodig?"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/textView4"
                    android:layout_marginTop="50dp"
                    android:text="Wat is The Maze Runner?"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView6"
                    android:layout_below="@+id/textView7"
                    android:text="Hoe speel ik het spel?"
                    android:textStyle="bold" />
            </RelativeLayout>
        </ScrollView>
        <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="17dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        app:srcCompat="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/imageView2"
        android:text="Â© The Maze Runner 2018"
        android:layout_marginEnd="10dp"
        android:textSize="12sp"
        android:textStyle="bold"
       />
</RelativeLayout>